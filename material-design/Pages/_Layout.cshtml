<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MaterialDesignSample</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/material-components-web/dist/css/material-components-web.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://unpkg.com/material-components-web@0.10.0/dist/material-components-web.min.css"
            integrity="sha384-IFkPQmRFyTBKrUvz3VU/J5Slt3DFkjWVke6xnDDrneTZYzngSQ8zM0cXESBFOV/t"
            crossorigin="anonymous" asp-fallback-href="~/lib/material-components-web/dist/css/material-components-web.min.css"
            asp-fallback-test-class="mdc-fab__icon" asp-fallback-test-property="display" asp-fallback-test-value="flex" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto+Mono">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>
<body class="mdc-typography demo-body">
    <div class="mdc-toolbar mdc-toolbar--fixed">
        <div class="mdc-toolbar__row">
            <section class="mdc-toolbar__section mdc-toolbar__section--align-start">
                <button class="demo-menu material-icons">menu</button>
                <span class="mdc-toolbar__title catalog-title">MaterialDesignSample</span>
            </section>
        </div>
    </div>

    <aside class="mdc-temporary-drawer">
        <nav class="mdc-temporary-drawer__drawer">
            <header class="mdc-temporary-drawer__header">
                <div class="mdc-temporary-drawer__header-content mdc-theme--primary-bg mdc-theme--text-primary-on-primary">
                    MaterialDesignSample
                </div>
            </header>
            <nav class="mdc-temporary-drawer__content mdc-list-group">
                <div id="icon-with-text-demo" class="mdc-list">
                    <a asp-page="/Index" class="mdc-list-item mdc-temporary-drawer--selected">
                        <i class="material-icons mdc-list-item__start-detail" aria-hidden="true">inbox</i>Home
                    </a>
                    <a asp-page="/Contact" class="mdc-list-item">
                        <i class="material-icons mdc-list-item__start-detail" aria-hidden="true">email</i>Contact
                    </a>
                </div>

                <hr class="mdc-list-divider">

                <div class="mdc-list">
                    <a asp-page="/About" class="mdc-list-item">
                        <i class="material-icons mdc-list-item__start-detail" aria-hidden="true">email</i>About
                    </a>
            </nav>
        </nav>
    </aside>

    @RenderBody()
    
    <environment include="Development">
        <script src="~/lib/material-components-web/dist/css/material-components-web.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://unpkg.com/material-components-web@0.10.0/dist/material-components-web.min.js"
                asp-fallback-src="~/lib/material-components-web/dist/css/material-components-web.min.js"
                asp-fallback-test="window.mdc"
                crossorigin="anonymous"
                integrity="sha384-D65tyVisQMkNTuGCyMgbXhjXti5DUxIUXYYKDPfOEf4/2dfe83xfQcBmcPUvEC6r">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
